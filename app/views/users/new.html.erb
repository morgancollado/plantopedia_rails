<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited you from saving:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@user) do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>

    <%= f.label "Username" %>
    <%= f.text_field :username %>

    <%= f.label "Password" %>
    <%= f.password_field :password %>

    <%= f.submit %>

<% end %>