<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited you from saving:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Sign up</h1>
<%= form_for(@user) do |f| %>
<div class="form-group">
    <label for="exampleInputEmail1"><%= f.label "Name" %></label>
    <%= f.text_field :name %>
  </div>

<div class="form-group">
    <%= f.label "Username" %>
    <%= f.text_field :username %>

  </div>

<div class="form-group">
    <%= f.label "Password" %>
    <%= f.password_field :password %>
</div>
   <%= f.submit %>
   
 
<% end %>